@using WebBQA.Models;
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<ChatLieu>
@using X.PagedList.Web.Common;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "QuanLyChatLieu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Danh sách chất liệu</h1>


<p>
    @TempData["Message"]

</p>
<p>
    <a asp-action="ThemChatLieu" class="btn btn-primary">Thêm chất liệu</a>
</p>
<table class="table">
    <thead>
        <tr class="table-warning">

            <th>
                Mã chất liệu

            </th>

            <th>
                Tên chất liệu
            </th>
           

        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            string @cls = "table-success";
        }
        @foreach (var item in Model)
        {
            i = i + 1;
            cls = "table-success";
            if (i % 2 == 0)
            {
                cls = "table-primary";
            }

            <tr class="@cls">
                <td>
                    @Html.DisplayFor(modelItem => item.MaChatLieu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChatLieu1)
                </td>
                

               
            </tr>
        }
    </tbody>
</table>
<div class="product__pagination">
     @Html.PagedListPager(Model, page => Url.Action("QuanLyChatLieu", new { page = page }))
</div>





