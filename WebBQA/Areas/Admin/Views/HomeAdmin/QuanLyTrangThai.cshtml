@using WebBQA.Models;
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<TrangThai>
@using X.PagedList.Web.Common;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "QuanLyTrangThai";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Danh sách trạng thái</h1>

<p>
    <a asp-action="ThemTrangThai" class="btn btn-primary">Thêm trạng thái</a>
</p>
<p>
    @TempData["Message"]

</p>
<table class="table">
    <thead>
        <tr class="table-warning">

            <th>
                Mã trạng thái

            </th>

            <th>
                Tên trạng thái
            </th>


        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            string @cls = "table-success";
        }
        @foreach (var item in Model)
        {
            i = i + 1;
            cls = "table-success";
            if (i % 2 == 0)
            {
                cls = "table-primary";
            }

            <tr class="@cls">
                <td>
                    @Html.DisplayFor(modelItem => item.MaTrangThai)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenTrangThai)
                </td>



            </tr>
        }
    </tbody>
</table>
<div class="product__pagination">
    @Html.PagedListPager(Model, page => Url.Action("QuanLyTrangThai", new { page = page }))
</div>



