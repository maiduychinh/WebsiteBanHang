@using WebBQA.Models;
@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<HoaDonBan>
@using X.PagedList.Web.Common;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "QuanlyHoaDon";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Quản lý trạng thái đơn hàng </h1>

<p>
    @TempData["Message"]

</p>
<table class="table">
    <thead>
        <tr class="table-warning">

            <th>
                Mã hoá đơn 

            </th>

            <th>
                Tài khoản
            </th>
            <th>
                Ngày mua
            </th>
            <th>
                Tên người nhận
            </th>
            <th>
                Số điện thoại
            </th>
          
            <th>
                Tổng tiền
            </th>
            <th >
                Thanh toán
            </th>
            <th>
                Ghi chú
            </th>
            <th>
                Trạng thái
            </th>



        </tr>
    </thead>
    <tbody>
        @{
            int i = 0;
            string @cls = "table-success";
        }
        @foreach (var item in Model)
        {
            i = i + 1;
            cls = "table-success";
            if (i % 2 == 0)
            {
                cls = "table-primary";
            }

            <tr class="@cls">
                <td>
                    @Html.DisplayFor(modelItem => item.MaHoaDon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaKhachHang)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayHoaDon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TenNguoiNhan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoDienThoai)
                </td>
                
                <td>
                        @Html.DisplayFor(modelItem => item.TongTienHd)
                </td>
                <td>
                        @Html.DisplayFor(modelItem => item.PhuongThucThanhToan)
                </td>

                <td>
                        @Html.DisplayFor(modelItem => item.GhiChu )
                </td>
              
                <td>
                    @Html.DisplayFor(modelItem => item.MaTrangThaiNavigation.TenTrangThai)
                </td>
               
                <td>

                    <a class="btn btn-info" asp-action="SuaHoaDon" asp-route-maHD="@item.MaHoaDon">Sửa</a>

                </td>
            </tr>
        }
    </tbody>
</table>
<div class="product__pagination">
    @Html.PagedListPager(Model, page => Url.Action("QuanLyHoaDon", new { page = page }))
</div>


