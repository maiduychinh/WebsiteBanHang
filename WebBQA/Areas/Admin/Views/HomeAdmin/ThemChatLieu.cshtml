

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebBQA.Models.ChatLieu


@{
    ViewData["Title"] = "ThemChatLieu";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Thêm chất liệu mới</h1>



<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="ThemChatLieu">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaChatLieu" class="control-label">Mã chất liệu</label>
                <input asp-for="MaChatLieu" class="form-control" />
                <span asp-validation-for="MaChatLieu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChatLieu1" class="control-label">Tên chất liệu</label>
                <input asp-for="ChatLieu1" class="form-control" />
                <span asp-validation-for="ChatLieu1" class="text-danger"></span>
            </div>




            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="QuanLyChatLieu" class="btn btn-danger">Trở về</a>
</div>

