@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebBQA.Models.MauSac
@{
    ViewData["Title"] = "ThemMau";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Thêm màu</h1>



<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="ThemMau">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaMauSac" class="control-label">Mã màu</label>
                <input asp-for="MaMauSac" class="form-control" />
                <span asp-validation-for="MaMauSac" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenMauSac" class="control-label">Tên màu</label>
                <input asp-for="TenMauSac" class="form-control" />
                <span asp-validation-for="TenMauSac" class="text-danger"></span>
            </div>




            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="QuanLyMau" class="btn btn-danger">Trở về</a>
</div>

