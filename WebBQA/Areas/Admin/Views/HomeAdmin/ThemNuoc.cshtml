@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebBQA.Models.QuocGia
@{
    ViewData["Title"] = "ThemNuoc";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Thêm nước sản xuất</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="ThemNuoc">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaNuocSx" class="control-label">Mã nước</label>
                <input asp-for="MaNuocSx" class="form-control" />
                <span asp-validation-for="MaNuocSx" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenNuoc" class="control-label">Tên nước</label>
                <input asp-for="TenNuoc" class="form-control" />
                <span asp-validation-for="TenNuoc" class="text-danger"></span>
            </div>
           


          
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="QuanLyNuoc" class="btn btn-danger">Trở về</a>
</div>

