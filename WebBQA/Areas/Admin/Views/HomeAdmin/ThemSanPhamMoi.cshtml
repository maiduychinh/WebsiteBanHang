@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model WebBQA.Models.DanhMucSp

@{
    ViewData["Title"] = "ThemSanPhamMoi";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Thêm sản phẩm mới</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-action="ThemSanPhamMoi">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaSp" class="control-label">Mã sản phẩm</label>
                <input asp-for="MaSp" class="form-control" />
                <span asp-validation-for="MaSp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenSp" class="control-label">Tên sản phẩm</label>
                <input asp-for="TenSp" class="form-control" />
                <span asp-validation-for="TenSp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaChatLieu" class="control-label">Chất liệu</label>
                <select asp-for="MaChatLieu" class="form-control" asp-items="ViewBag.MaChatLieu" ></select>
            </div>
          
        
            <div class="form-group">
                <label asp-for="MaHangSx" class="control-label">Hãng sản xuất</label>
                <select asp-for="MaHangSx" class="form-control" asp-items="ViewBag.MaHangSx"></select>
            </div>
         
           <div class="form-group">
                <label asp-for="MaNuocSx" class="control-label">Nước sản xuất</label>
                <select asp-for="MaNuocSx" class="form-control" asp-items="ViewBag.MaNuocSx"></select>
            </div>
         
            <div class="form-group">
                <label asp-for="ThoiGianBaoHanh" class="control-label">Thời gian bảo hành</label>
                <input asp-for="ThoiGianBaoHanh" class="form-control" />
                <span asp-validation-for="ThoiGianBaoHanh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GioiThieuSp" class="control-label">Giới thiệu sản phẩm</label>
                <input asp-for="GioiThieuSp" class="form-control" />
                <span asp-validation-for="GioiThieuSp" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="MaLoai" class="control-label">Loại sản phẩm</label>
                <select asp-for="MaLoai" class="form-control" asp-items="ViewBag.MaLoai"></select>
            </div>
         
            <div class="form-group">
                <label asp-for="AnhDaiDien" class="control-label">Ảnh Sản Phẩm</label>
                <input asp-for="AnhDaiDien" type="file" class="form-control-file" />
                <span asp-validation-for="AnhDaiDien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaKichThuoc" class="control-label">Kích thước</label>
                <select asp-for="MaKichThuoc" class="form-control" asp-items="ViewBag.MaKichThuoc"></select>
            </div>
            <div class="form-group">
                <label asp-for="MaMauSac" class="control-label">Màu sắc</label>
                <select asp-for="MaMauSac" class="form-control" asp-items="ViewBag.MaMauSac"></select>
            </div>

         
            <div class="form-group">
                <label asp-for="GiaSanPham" class="control-label">Giá sản phẩm</label>
                <input asp-for="GiaSanPham" class="form-control" />
                <span asp-validation-for="GiaSanPham" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Slton" class="control-label">Số lượng tồn</label>
                <input asp-for="Slton" class="form-control" />
                <span asp-validation-for="Slton" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DanhMucSanPham" class="btn btn-danger">Trở về</a>
</div>

