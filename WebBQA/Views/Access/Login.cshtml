@{
    Layout = null;
}

@model KhachHang


<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="../../1LayoutAdmin/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="../../1LayoutAdmin/assets/vendors/css/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- Plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <!-- endinject -->
    <!-- Layout styles -->
    <link rel="stylesheet" href="../../1LayoutAdmin/assets/css/style.css">
    <!-- End layout styles -->
    <link rel="shortcut icon" href="../../1LayoutAdmin/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller center">
        <div class="container-fluid page-body-wrapper full-page-wrapper center">
            <div class="content-wrapper d-flex align-items-center auth">
                <div class="row flex-grow">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light  p-5">
                            <div class="brand-logo center">
                                <img class="mx-auto d-block" src="../1LayoutQA/img/logo3.jpg">
                            </div>
                            <h5>Đăng nhập </h5>

                            @*<form class="pt-3">*@
                            @using (Html.BeginForm("Login", "Access", FormMethod.Post))
                            {
                                <div class="form-group">


                                    @Html.TextBoxFor(x => x.MaKhachHang, new { @class = "form-control form-control-lg", placeholder = "Tài khoản", required = "required", autofocus = "autofocus" })
                                    @*<input type="email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Username"> *@
                                </div>

                                <div class="form-group">


                                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control form-control-lg", type = "password", placeholder = "Mật khẩu" })
                                    @*<input type="password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">*@
                                </div>
                                <p class="btn-lg">@TempData["Message"]</p>

                                <div class="mt-3">

                                    <button type="submit" class="  mx-auto d-block btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn">Đăng Nhập</button>
                                    @*<a class="btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" href="../../index.html">SIGN IN</a> *@
                                </div>



                                <div class="text-center mt-4 font-weight-light">
                                    Không có tài khoản? <a asp-action="Register" class="text-primary">Tạo tài khoả mới</a>
                                </div>

                            }@*</form>*@
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="../../1LayoutAdmin/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- Plugin js for this page -->
    <!-- End plugin js for this page -->
    <!-- inject:js -->
    <script src="../../1LayoutAdmin/assets/js/off-canvas.js"></script>
    <script src="../../1LayoutAdmin/assets/js/hoverable-collapse.js"></script>
    <script src="../../1LayoutAdmin/assets/js/misc.js"></script>
    <!-- endinject -->
</body>
</html>