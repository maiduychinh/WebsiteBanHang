@model IEnumerable<CartItem>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutQA2.cshtml";
}

<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Các sản phẩm</font></font></th>
                                <th><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Giá</font></font></th>
                                <th><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Số lượng</font></font></th>
                                <th><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Tổng cộng</font></font></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="shoping__cart__item">
                                        <img src="~/ProductsImages/Images/@item.AnhDaiDien" alt="">
                                        <h5><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">@item.TenSp</font></font></h5>
                                    </td>
                                    <td class="shoping__cart__price">
                                        <font style="vertical-align: inherit;">
                                            <font style="vertical-align: inherit;">
                                                @item.GiaSanPham.ToString("#,###") Vnđ
                                            </font>
                                        </font>
                                    </td>
                                    <td class="shoping__cart__quantity">
                                        <div class="quantity">
                                            
                                                @item.SoLuong
                                           
                                        </div>
                                    </td>
                                    <td class="shoping__cart__total">
                                        <font style="vertical-align: inherit;">
                                            <font style="vertical-align: inherit;">
                                                @item.ThanhTien.ToString("#,###") Vnđ 
                                            </font>
                                        </font>
                                    </td>
                                    <td>



                                        <a class="btn btn-danger" href="@Url.Action("RemoveFromCart", "Cart", new { id = item.MaSp })">Xoá</a>


                                    </td>

                             
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__btns">
                    <a asp-controller="Home" asp-action="Index" class="primary-btn cart-btn"><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">TIẾP TỤC MUA SẮM</font></font></a>
                  
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__continue">
                    <div class="shoping__discount">
                        <form action="#">
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__checkout">
                    <ul>
                        <li><font style="vertical-align: inherit;"><font style="vertical-align: inherit;">Tổng cộng</font></font><span><font style="vertical-align: inherit;"><font style="vertical-align: inherit;"></font></font>@Model.Sum(p => p.ThanhTien).ToString("#,###") Vnđ</span></li>
                    </ul>
                    <a  class="primary-btn" asp-action="ThanhToan" asp-controller="Cart">
                        <font style="vertical-align: inherit;">
                            <font style="vertical-align: inherit;">Thanh Toán

                            </font>
                        </font>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>

