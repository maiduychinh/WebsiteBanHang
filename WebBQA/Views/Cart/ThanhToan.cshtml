@model IEnumerable<CartItem>

@{
    ViewData["Title"] = "ThanhToan";
    Layout = "~/Views/Shared/_LayoutQA.cshtml";


}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Raleway:wght@600;800&display=swap" rel="stylesheet">

<!-- Icon Font Stylesheet -->
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/../../1LayoutCheckout/css/all.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

<!-- Libraries Stylesheet -->
<link href="../../1LayoutCheckout/css/lightbox.min.css" rel="stylesheet">
<link href="../../1LayoutCheckout/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">


<!-- Customized Bootstrap Stylesheet -->
<link href="../1LayoutCheckout/css/bootstrap.min.css" rel="stylesheet">

<!-- Template Stylesheet -->
<link href="../1LayoutCheckout/css/style.css" rel="stylesheet">

<!-- Single Page Header start -->
<!-- Single Page Header End -->
<!-- Checkout Page Start -->
<div class="container-fluid ">
    <div class="container ">
        <form asp-action="ThanhToan" asp-controller="Cart" method="post">
            <div class="row ">
           
                    <div class="col-md-12 col-lg-6 col-xl-7">

                      



                        <div class="form-item delivery-info">
                            <label class="form-label my-3">Tên người nhận<sup>*</sup></label>
                            <input type="text" name="HoTen" class="form-control">
                        </div>
                        <div class="form-item delivery-info">
                            <label class="form-label my-3">Địa chỉ nhận hàng <sup>*</sup></label>
                            <input type="text" name="DiaChi" class="form-control" placeholder="">
                        </div>
                        <div class="form-item delivery-info">
                            <label class="form-label my-3">Số điện thoại<sup>*</sup></label>
                            <input type="text"name="DienThoai" class="form-control">
                        </div>
                    
                       
                      
                        <div class="form-item mt-2">
                            <textarea name="GhiChu" class="form-control" spellcheck="false" cols="30" rows="11" placeholder="Ghi chú"></textarea>
                        </div>
                        <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                            <button  type="submit" class="btn border-secondary text-uppercase w-100 text-primary">Đặt hàng</button>
                        </div>
                    </div>
          
                <div class="col-md-12 col-lg-6 col-xl-5">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Ảnh </th>
                                    <th scope="col">Tên</th>
                                    <th scope="col">Giá</th>
                                    <th scope="col">Số lượng</th>
                                    <th scope="col">Thành tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                    <tr>
                                        <th scope="row">
                                            <div class="d-flex align-items-center mt-2">
                                                <img src="~/ProductsImages/Images/@item.AnhDaiDien" class="img-fluid rounded-circle" style="width: 90px; height: 90px;" alt="@item.TenSp">
                                            </div>
                                        </th>
                                        <td class="py-5">@item.TenSp</td>
                                        <td class="py-5">@item.GiaSanPham.ToString("#,###") </td>
                                        <td class="py-5">@item.SoLuong</td>
                                        <td class="py-5">@item.ThanhTien.ToString("#,###") Vnđ</td>
                                    </tr>

                                }
                                
                                <tr>
                                    <th scope="row">
                                    </th>
                                    <td class="py-5">
                                        <p class="mb-0 text-dark text-uppercase py-3">Tổng tiền</p>
                                    </td>
                                    <td class="py-5"></td>
                                    <td class="py-5"></td>
                                    <td class="py-5">
                                        <div class="py-3 border-bottom border-top">
                                            <p class="mb-0 text-dark">@Model.Sum(p=>p.ThanhTien).ToString("#,###") Vnđ</p>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                  
          
                </div>
            </div>
        </form>
    </div>
</div>
<!-- Checkout Page End -->
